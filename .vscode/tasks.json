{
	"version": "2.0.0",
	"tasks": [
			{
					"type": "cppbuild",
					"label": "C/C++: gcc.exe build active file",
					"command": "C:\\MinGW\\bin\\gcc.exe",
					"args": [
							"-g",
							"-Wall",
							"${file}",
							"-o",
							"${fileDirname}\\${fileBasenameNoExtension}.exe"
					],
					"options": {
							"cwd": "${fileDirname}"
					},
					"problemMatcher": ["$gcc"],
					"group": {
							"kind": "build",
							"isDefault": true
					}
			},
			{
					"label": "execute",
					"command": "cmd",
					"group": "test",
					"args": [
							"/C",
							"${fileDirname}\\${fileBasenameNoExtension}.exe"
					]
			}
	]
}